<resources>

    <style name="OneTimePassSplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="OneTimePassTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:actionBarWidgetTheme">
            @style/OneTimePassTheme.ActionBar.SearchView
        </item>
        <item name="searchViewStyle">@style/OneTimePassTheme.ActionBar.SearchView</item>
        <item name="actionBarTheme">@style/OneTimePassTheme.ActionBar</item>
        <item name="actionBarStyle">@style/OneTimePassTheme.ActionBar</item>
    </style>

    <style name="OneTimePassTheme.ActionBar" parent="OneTimePassTheme">
        <item name="android:actionOverflowButtonStyle">
            @style/OneTimePassTheme.ActionBar.OverflowButton
        </item>
        <item name="android:actionMenuTextAppearance">
            @style/OneTimePassTheme.ActionBar.OverflowMenu
        </item>
        <item name="android:actionBarWidgetTheme">
            @style/OneTimePassTheme.ActionBar.SearchView
        </item>
        <item name="android:actionMenuTextColor">@color/actionbar_title</item>
        <item name="android:textColorHint">@color/actionbar_title</item>
        <item name="android:editTextColor">@color/actionbar_title</item>
        <item name="colorControlNormal">@color/actionbar_title</item>
    </style>

    <style name="OneTimePassTheme.ActionBar.OverflowButton" parent="OneTimePassTheme.ActionBar">
        <item name="android:src">@drawable/ic_overflow_menu</item>
        <item name="actionMenuTextColor">@color/actionbar_title</item>
        <item name="android:textColorPrimary">@color/actionbar_title</item>
        <item name="android:textColorSecondary">@color/actionbar_title</item>
    </style>

    <style name="OneTimePassTheme.ActionBar.OverflowMenu" parent="OneTimePassTheme.ActionBar">
        <item name="android:background">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/actionbar_title</item>
        <item name="android:textColorSecondary">@color/actionbar_title</item>
    </style>

    <style name="OneTimePassTheme.ActionBar.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/actionbar_title</item>
        <item name="android:textColorHint">@color/actionbar_title</item>
        <item name="android:editTextColor">@color/actionbar_title</item>
        <item name="goIcon">@android:drawable/ic_menu_search</item>
        <item name="commitIcon">@android:drawable/ic_menu_search</item>
        <item name="searchIcon">@android:drawable/ic_menu_search</item>
        <item name="closeIcon">@android:drawable/ic_menu_close_clear_cancel</item>
        <item name="voiceIcon">@null</item>
        <item name="queryBackground">@color/primary_dark</item>
        <item name="searchHintIcon">@android:drawable/ic_menu_search</item>
        <item name="homeAsUpIndicator">@drawable/ic_back_home</item>
        <item name="colorControlNormal">@color/actionbar_title</item>
    </style>

    <style name="OneTimePassTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="OneTimePassTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="OneTimePassTheme.EditText" parent="OneTimePassTheme">
        <item name="android:background">@drawable/password_default</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="OneTimePassTheme.EditText.Matching" parent="OneTimePassTheme">
        <item name="android:background">@drawable/password_matching</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="OneTimePassTheme.EditText.Mismatch" parent="OneTimePassTheme">
        <item name="android:background">@drawable/password_mismatch</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="OneTimePassTheme.Button" parent="OneTimePassTheme">
        <item name="android:background">@drawable/button_normal</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

</resources>
